<ul class="nav nav-tabs">
  <li class="active"><a data-toggle="tab" href="#manual" id="manualtab">Manuele invoer</a></li>
  <li><a data-toggle="tab" href="#bulk" id="bulktab">Bulk invoer</a></li>
</ul>	
	
<div class="tab-content">
	<div id="manual" class="tab-pane fade in active">
	<table class="table table-condensed" id="recept_ingredienten" data-prototype="{{ form_widget(form.ingredienten.vars.prototype)|e('html_attr') }}">
		<thead>
			<tr>
				<th class="col-sm-2">Hoeveelheid</th>
				<th class="col-sm-2">Eenheid</th>
				<th class="col-sm-7">Ingredient</th>
				<th class="col-sm-1"></th>
			</tr>
		</thead>
		<tbody>
		{% for ingredient in form.ingredienten %}
			<tr class="ingredientform">
			<td>{{ form_widget(ingredient.hoeveelheid) }}{{ form_errors(ingredient.hoeveelheid) }}</td>
			<td>{{ form_widget(ingredient.eenheid) }}{{ form_errors(ingredient.eenheid) }}</td>
			<td>{{ form_widget(ingredient.ingredient) }}{{ form_errors(ingredient.ingredient) }}</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	</div>
	<div id="bulk" class="tab-pane fade">
	{{ form_row(form.ingredienten_bulk) }}
	<button type="button" class="btn btn-default btn-xs" id="import"><span class="glyphicon glyphicon-upload"></span>&nbsp;Importeer</button><br/><br/>
	</div>
</div>
