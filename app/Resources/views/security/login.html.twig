{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4">
			{% if error %}
				<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			<form action="{{ path('login') }}" method="post">

				<div class="form-group">
					<label for="username" class="control-label">Gebruikersnaam of e-mail:</label>
					<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" />
				</div>
	
				<div class="form-group">
					<label for="password" class="control-label">Paswoord:</label>
					<input type="password" class="form-control" id="password" name="_password" />
				</div>
	
				<div class="checkbox">
    				<label for="remember_me"><input type="checkbox" id="remember_me" name="_remember_me" checked />Ingelogd blijven</label>
				</div>

				{# URL the user is redirected to on success
				<input type="hidden" name="_target_path" value="/recepten" />
				#}
				
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        
				<button type="submit" class="btn btn-default">Aanmelden</button>
	
			</form>
			<a href="{{ path('registreer') }}">Nog geen account? Registreer hier</a>
		</div>
	</div>
</div>

{% endblock %}