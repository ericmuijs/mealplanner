{% extends 'base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="{{ asset('css/stickyfooter.css') }}">
<link rel="stylesheet" href="{{ asset('css/general.css') }}">
{% endblock %}

{% block body %}
{{ render(controller('AppBundle:Navigation:menu')) }}

<div class="container" style="margin-top:75px;">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-2">

		<h1>Profiel</h1>
		<p>Gebruikersnaam: {{ user.username }}</p>
		<p>E-mail: {{ user.email }}</p>
		<p>Aantal recepten: {{ user.getrecepten|length }}</p>
		<p>Aantal menu's: {{ user.getmenus|length }}</p>
		<p>Lid sinds: {{ user.getRegistratiedatum|date('d/m/Y') }}</p>
		<p>Tags:</p>
		<ul class="list-unstyled">
		{% for tag in user.tags %} 
			<li style="margin-left: 40px;"><span class="label label-primary">{{ tag.name }}</span></li>
		{% endfor %}
		</ul>
		<a href="{{ path('edittags') }}">Pas aan...</a>
		</div>
	</div>
</div>

{{ render(controller('AppBundle:Navigation:footer')) }}

{% endblock %}