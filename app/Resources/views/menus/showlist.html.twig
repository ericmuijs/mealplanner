<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal">&times;</button>
	<h4 class="modal-title">Ingredienten</h4>
</div>
<div class="modal-body">
	{% for afdeling in afdelingen %}
	 <h4>{{ afdeling.name }}</h4>
	 <ul class="list-unstyled ingredient-list">
	 {% for ingredient in afdeling.ingredienten %}
	 	<li>{{ ingredient.hoeveelheid}} {{ ingredient.eenheid}} {{ ingredient.ingredient}} </li>
	 {% endfor %}
	 </ul>
	{% endfor %}
</div>
<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
</div>