<div class="modal-header">
	<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	<h4 class="modal-title" id="exampleModalLabel">Preview voor menu {{ menu.naam }}</h4>
</div>

<div class="modal-body">

	<div style="overflow-x:auto;">
		<table id="previewTable" class="table table-bordered">
			<thead>
				<tr>
					{% for day in menuData['days'] %}
						<th>Dag {{ loop.index }}</th>
					{% endfor %}
					<th></th>
				</tr>
			</thead>
			<tbody>
				{% for i in 1..3 %}
				<tr id="slot{{ i }}">
					{% for j in 0..(menuData['days']|length -1)%}
						<td class="droppable">

							{% if menuData['days'][j]['slots'][i] is defined %}
								{% for title in menuData['days'][j]['slots'][i] %}
									<div class="mealplan-item">
										<div class="title">{{ title }}</div>
									</div>
								{% endfor %}
							{% endif %}

						</td>
					{% endfor %}
					<td class="timeSlotName"><p>{% if i == 1 %}Ochtend{%elseif i == 2 %}Middag{%elseif i == 3 %}Avond{% endif %}</p></td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>

</div>

<div class="modal-footer">
	<button type="button" class="btn btn-default" data-dismiss="modal">Sluit</button>
</div>